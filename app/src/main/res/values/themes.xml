<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Veggie" parent="Theme.AppCompat.Light.NoActionBar">

    <!-- Primary brand color. -->
    <item name="android:colorPrimary">@color/white</item>
    <item name="android:statusBarColor">@android:color/black</item>
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    <item name="android:windowBackground">@color/white</item>
    <item name="colorControlHighlight">#F7F9FF</item>
    <!-- 한글 영어 폰트 설정 -->
    <item name="android:textViewStyle">@style/AppTextViewStyle</item>
    <item name="android:editTextStyle">@style/AppTextViewStyle</item>
    <item name="android:buttonStyle">@style/AppTextViewStyle</item>

    <!--  애니메이션 사용 허가  -->
    <item name="android:windowActivityTransitions">true</item>

    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowFullscreen">false</item>

</style>

<style name="Theme.Veggie.NoActionBar" parent="Theme.Veggie">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowFullscreen">false</item>
</style>


</resources>